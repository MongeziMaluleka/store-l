{%- comment -%}
  File: sections/hero.liquid
  Purpose: Displays a hero banner at the top of the homepage.
  This is where you highlight your brand, a promotion, or a key product line.
{%- endcomment -%}

<section class="hero">
  <!-- Hero headline -->
  <h1>Welcome to {{ shop.name }}!</h1>

  <!-- Subheadline (you can edit this text directly in Liquid or make it dynamic later) -->
  <p>Shop our latest collection now.</p>

  <!-- Call-to-action button that links to the "All Products" collection -->
  <a href="/collections/all" class="btn">Shop Now</a>
</section>